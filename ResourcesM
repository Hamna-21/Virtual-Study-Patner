    <script>
        // Handle the form submission and display dynamic video
        document.getElementById("video-form").addEventListener("submit", function(event) {
            event.preventDefault();

            const title = document.getElementById("video-title").value;
            const videoURL = document.getElementById("video-url").value;
            const pdfURL = document.getElementById("pdf-url").value;

            const videoID = videoURL.split("v=")[1]; // Extract video ID from URL
            const iframeSrc = "https://www.youtube.com/embed/" + videoID;

            document.getElementById("dynamic-video").src = iframeSrc;
            document.getElementById("dynamic-link").href = videoURL;
            document.getElementById("dynamic-link").textContent = "Watch " + title + " on YouTube";

            if (pdfURL) {
                document.getElementById("dynamic-pdf").href = pdfURL;
            } else {
                document.getElementById("dynamic-pdf").style.display = "none";
            }

            // Reset the form after submission
            document.getElementById("video-form").reset();
        });
    </script>
